@model Haxwaves_master.Models.Contact

<h2>New Client</h2>

<style>
    .custom-background {
        color: white;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        padding: 20px;
        border-radius: 10px;
    }
</style>

<form method="post" class="custom-background p-3">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="ClientInfo.FullName">
            <span class="text-danger">@Html.ValidationMessageFor(m => m.ClientInfo.FullName)</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="ClientInfo.Email">
            <span class="text-danger">@Html.ValidationMessageFor(m => m.ClientInfo.Email)</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Phone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="ClientInfo.PhoneNumber">
            <span class="text-danger">@Html.ValidationMessageFor(m => m.ClientInfo.PhoneNumber)</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Subject</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="ClientInfo.Subject">
            <span class="text-danger">@Html.ValidationMessageFor(m => m.ClientInfo.Subject)</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Message</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="ClientInfo.Message">
            <span class="text-danger">@Html.ValidationMessageFor(m => m.ClientInfo.Message)</span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-3"></div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
