@model Haxwaves_master.Models.Contact

<div class="container-fluid home" style="box-shadow: inset -1px -1px 20px 0px rgb(175, 19, 19);">

    <div class="row">
        <!-- Left side panel -->
        <div class="col-md-6 details-panel" style="margin-top: 130px;">
            <div class="p-4 text-white">
                <h4>Address</h4>
                <p>Mada Center 8th floor, 379 Hudson St, New York, NY 10018 US</p>
                <h4>Lets Talk</h4>
                <p>+1 800 1236879</p>
                <h4>General Support</h4>
                <p>contact@example.com</p>
            </div>
        </div>

        <!-- Right side form -->
        <div class="col-md-6" style="margin-top: 90px; color: skyblue;">
            <h2>Send Us A Message</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form method="post" class="custom-background p-3">
                <div class="side-panel"></div>
                <div class="mb-3">
                    <label for="fullName">Tell Us Your Name *</label>
                    <input type="text" class="form-control" asp-for="ClientInfo.FullName" placeholder="Full name">
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.ClientInfo.FullName)</span>
                </div>
                <div class="mb-3">
                    <label for="email">Enter Your Email *</label>
                    <input type="email" class="form-control" asp-for="ClientInfo.Email" placeholder="Eg. example@mail.com">
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.ClientInfo.Email)</span>
                </div>
                <div class="mb-3">
                    <label for="phone">Enter Phone Number</label>
                    <input type="text" class="form-control" asp-for="ClientInfo.PhoneNumber" placeholder="Eg. +1 800 000000">
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.ClientInfo.PhoneNumber)</span>
                </div>
                <div class="mb-3">
                    <label for="subject">Subject</label>
                    <input type="text" class="form-control" asp-for="ClientInfo.Subject">
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.ClientInfo.Subject)</span>
                </div>
                <div class="mb-3">
                    <label for="message">Message *</label>
                    <textarea class="form-control" asp-for="ClientInfo.Message" rows="4" placeholder="Write us a message"></textarea>
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.ClientInfo.Message)</span>
                </div>

                <button type="submit" class="btn btn-primary">SEND MESSAGE</button>
            </form>
        </div>
    </div>
</div>

